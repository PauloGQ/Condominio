@model IEnumerable<Model.Sindico>

@{
    ViewBag.Title = "ListaSindico";
}

<h2>ListaSindico</h2>


    <h6 class="m-0 font-weight-bold text-primary">
        <a href="@Url.Action("InserirSindico", "Home" )"
           class="btn btn-success btn-icon-split">
            <span class="icon text-white-50">
                <i class="fas fa-check"></i>
            </span>
            <span class="text">Novo Cliente</span>
        </a>
    </h6>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.IdSindico)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cpf)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Telefone)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.IdSindico)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cpf)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Telefone)
        </td>
        <td>
            <a href="@Url.Action("EditarSindico", "Home" , new { id=item.IdSindico })" class="btn btn-success btn-circle btn-sm">
                <i class="fas fa-pencil-alt"></i>
            </a>

            <a href="@Url.Action("VisualizarSindico", "Home" , new { id=item.IdSindico })" class="btn btn-warning btn-circle btn-sm">
                <i class="fas fa-info"></i>
            </a>
            <a href="@Url.Action("ExcluirSindico", "Home" , new { id=item.IdSindico })" class="btn btn-trash btn-circle btn-sm">
                <i class="fas fa-info"></i>
            </a>
        </td>
    </tr>
}

</table>
