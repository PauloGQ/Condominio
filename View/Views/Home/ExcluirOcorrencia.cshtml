@model Model.Ocorrencia
@{
    Layout = null;
    ViewBag.Title = "ExcluirOcorrencia";
}

<div class="modal-dialog">
    <div class="modal-dialog " role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title text-center text-danger" id="exampleModalLabel">Tem certeza de que deseja excluir este registro?</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>

            </div>

            <div class="modal-body">
                <div class="form-group">
                    <label for="recipient-name" class="control-label">@Html.DisplayNameFor(model => model.IdOcorrencia)</label>
                    <input type="text" class="form-control" id="recipient-id" disabled="disabled" value="@Html.DisplayFor(model => model.IdOcorrencia)">
                </div>

                <div class="form-group">
                    <label for="message-text" class="control-label">@Html.DisplayNameFor(model => model.NomeSindico)</label>
                    <input type="text" class="form-control" id="recipient-nome" disabled="disabled" value="@Html.DisplayFor(model => model.NomeSindico)">
                </div>

                <div class="form-group">
                    <label for="recipient-name" class="control-label">@Html.DisplayNameFor(model => model.Nome)</label>
                    <p class="input-group-text disabled">@Html.DisplayFor(model => model.Nome)</p>
                </div>

                <div class="form-group">
                    <label for="recipient-name" class="control-label">@Html.DisplayNameFor(model => model.DataOcorrencia)</label>
                    <input type="text" class="form-control" id="recipient-cpf" disabled="disabled" value="@Html.DisplayFor(model => model.DataOcorrencia)">
                </div>

                <div class="form-group">
                    <label for="recipient-name" class="control-label">@Html.DisplayNameFor(model => model.Status)</label>
                    <input type="text" class="form-control" id="recipient-cpf" disabled="disabled" value="@Html.DisplayFor(model => model.Status)">
                </div>


                <div class="form-group">
                    <label for="recipient-name" class="control-label">@Html.DisplayNameFor(model => model.Tipo)</label>
                    <input type="text" class="form-control" id="recipient-cpf" disabled="disabled" value="@Html.DisplayFor(model => model.Tipo)">
                </div>
                <div class="form-group">
                    <label for="recipient-name" class="control-label">@Html.DisplayNameFor(model => model.Descricao)</label>
                    <input type="text" class="form-control" id="recipient-cpf" disabled="disabled" value="@Html.DisplayFor(model => model.Descricao)">
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-actions no-color">
                        <input type="submit" value="Excluir" class="btn btn-danger" />
                    </div>
                }
            </div>
        </div>
    </div>
